{
  "fmt": {
    "files": {
      "exclude": [
        "data",
        "zips",
        "share_data",
        "user_scripts",
        "scripts",
        "test"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": [
        "data",
        "zips",
        "share_data",
        "user_scripts",
        "scripts",
        "test"
      ]
    }
  },
  "test": {
    "files": {
      "include": ["./test"]
    }
  },
  "tasks": {
    "lint": "deno lint && deno fmt --check",
    "fmt": "deno fmt",
    "test": "deno test --allow-run=deno --unstable --allow-env --allow-read=./ --parallel",
    "snapshot": "deno task test --allow-write=./ -- --update",
    "coverage": "deno task test --coverage=./test/coverage/all/result && deno coverage --unstable --lcov ./test/coverage/all/result > ./test/coverage/all/cov.lcov",
    "unlock": "deno cache --lock=deno.lock --lock-write deps.ts",
    "reload": "deno cache --reload --lock=deno.lock deps.ts"
  }
}
